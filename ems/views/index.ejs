<%- include('header.ejs'); -%>

<body>
    <%- include('navbar.ejs'); -%>


    <section class="container-fluid px-0">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div id="headingGroup" class="text-white text-center d-none d-lg-block mt-5">
                    <h1 class="">WELCOME<span>/</span>EMS</h1>
                    <h1 class="">WELCOME<span>/</span>EMS</h1>
